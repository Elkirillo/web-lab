@using WebUI.Models
@model BooksListViewModel
@* тут отоброжение для BookList *@
@{
    ViewBag.Title = "Книги";
}

@* выгружаем список товаром, полная реализация лежит в _BookSummary *@
@foreach (var book in Model.Books)
{
    @Html.Partial("_BookSummary", book)
}

<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, genre = Model.CurrentGenre }))@* тут генерация исходящих сылок благодаря методу url.action *@
</div>
