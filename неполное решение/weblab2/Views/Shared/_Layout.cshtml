<html>
<head>
    @await Html.PartialAsync("MetatagsPartial")
    @await Html.PartialAsync("CssPartial")
</head>
<body class="left-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        @await Html.PartialAsync("HeaderPartial")
        <!-- Main -->
        <div class="wrapper">
            <div class="container" id="main">
                <div class="row gtr-150">
                    <div class="col-8 col-12-narrower">
                        @RenderBody()
                        <!-- Content -->                        
                    </div>
                </div>
                @await Html.PartialAsync("SidebarPartial")
                <div class="row features">
                    <section class="col-4 col-12-narrower feature">
                        <div class="image-wrapper first">
                            <a href="#" class="image featured"><img src="images/71FmDRkK5NL.jpg" alt="" /></a>
                        </div>
                        <header>
                            <h3>"Traveling in New York"</h3>
                        </header>
                        <p>
                            This book about of traveling, buy it now
                        </p>
                        <ul class="actions">
                            <li><a href="#" class="button">Buy for 200$ </a></li>
                        </ul>
                    </section>
                    <section class="col-4 col-12-narrower feature">
                        <div class="image-wrapper">
                            <a href="#" class="image featured"><img src="images/9153iTArDxL.jpg" alt="" /></a>
                        </div>
                        <header>
                            <h3>"The blue book"</h3>
                        </header>
                        <p>
                           This book about blue book
                        </p>
                        <ul class="actions">
                            <li><a href="#" class="button">Buy  for 199$</a></li>
                        </ul>
                    </section>
                    <section class="col-4 col-12-narrower feature">
                        <div class="image-wrapper">
                            <a href="#" class="image featured"><img src="images/71oGBcrSpJL.jpg" alt="" /></a>
                        </div>
                        <header>
                            <h3>"The Fearless Octopus"</h3>
                        </header>
                        <p>
                           Cool book about octopus
                        </p>
                        <ul class="actions">
                            <li><a href="#" class="button">Buy for 30$</a></li>
                        </ul>
                    </section>
                </div>
            </div>
        </div>
        <!-- Footer -->
        @await  Html.PartialAsync("FooterPartial")
    </div>
    @await Html.PartialAsync("ScriptPartial")
</body>
</html>